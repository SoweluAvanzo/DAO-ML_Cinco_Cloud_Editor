appearance default {
	lineWidth 2
	background (255, 255, 255)
	foreground (214, 216, 219)
}

appearance primary {
	lineWidth 2
	background (226, 227, 229)
	foreground (214, 216, 219)
}

appearance hidden extends primary {
	lineWidth 0
	transparency 1.0
}

appearance body {}

appearance h1 {
	font ("Sans BOLD", 16)
	foreground (255, 255, 255)
}

appearance h2 {
	font ("Sans BOLD", 12)
}

appearance job extends primary {
	background (204, 229, 255)
	foreground (184, 218, 255)
	filled true
}

appearance target extends primary {
	background (212, 237, 218)
	foreground (195, 230, 203)
}

appearance variable extends primary {}

// gitlab (yellow)
appearance artifact extends primary { background (255, 243, 205) }
appearance cache    extends primary { background (255, 243, 205) }
appearance release  extends primary { background (255, 243, 205) }

// purple
appearance env      extends primary { background (225, 186, 255) }

// docker (blue)
appearance _image   extends primary { background (204, 229, 255) }
appearance service  extends primary { background (204, 229, 255) }

// gray
appearance retry    extends primary {}

// conditions (red)
appearance except   extends primary { background (248, 215, 218) }
appearance only     extends primary { background (248, 215, 218) }
appearance rule     extends primary { background (248, 215, 218) }


appearance line_dashed {
	foreground (128, 128, 128)
	lineStyle DASH
	lineWidth 2
}

appearance line_solid {
	foreground (0, 0, 0)
	lineStyle SOLID
	lineWidth 2
}

appearance line_thick {
	foreground (0, 0, 0)
	lineStyle SOLID
	lineWidth 4
}

nodeStyle Note(1) {
	appearanceProvider ("info.scce.rig.appearance.NoteAppearanceProvider")
	rectangle body {
		appearance artifact
		size (200, 100)
		
		multiText {
			appearance body
			position(CENTER, MIDDLE)
			value "%s"
		}
		
		rectangle {
			appearance hidden
			position (RIGHT -7, TOP 7)
			size(fix 14, fix 16)
			
			image {
				size(fix 14, fix 16)
				path ("assets/icons/paperclip-transparent-16x14.png")
			}
		}
	}
}

edgeStyle NoteAnchor {
	appearance {
		lineWidth 1
		lineStyle DOT
	}
	
	decorator {
		location (1.0)
		CIRCLE
		appearance {
			lineWidth 1
			lineStyle DOT
		}
	}
}


nodeStyle Job (1) {
	// main body
	roundedRectangle {
		appearance job
		size (200, 50)
		corner (16, 16)
		
		// heading 
		roundedRectangle {
			
			appearance {
				foreground (184, 218, 255)
				background (0, 123, 255)
				filled true
			}
			
			position (LEFT, TOP)
			size(200, fix 30)
			corner (16, 16)
			
			text {
				appearance h1
				position (CENTER, TOP 4)
				value "%s"
			}
		}
		
				
		// footer
		text {
			appearance {
				foreground (96, 96, 96)
			}
			position(CENTER, BOTTOM -4)
			value "Double-click to min/max"
		}
	}
}

nodeStyle Target (1) {
	// main body
	roundedRectangle {
		appearance {
			background (255, 255, 255)
			foreground (214, 216, 219)
			lineWidth 2
		}
		size (200, 50)
		corner (16, 16)
		
		// heading 
		roundedRectangle {
			appearance {
				background (99, 111, 122)
			}
			position (LEFT, TOP)
			size(200, fix 30)
			corner (16, 16)
			
			text {
				appearance h1
				position (CENTER, TOP 4)
				value "%s"
			}
		}
		// footer
		text {
