		}
	}
}

nodeStyle Variable (1) {
	rectangle {
		appearance variable
		size (150, 20)
		
		text {
			position (RIGHT -24, MIDDLE)
			value "%s"
		}
		
		anchor ellipse {
			appearance body
			position (RIGHT -4, MIDDLE)
			size(fix 16, fix 16)
			image {
				size(fix 16, fix 16)
				path ("assets/icons/play-circle-16x16.png")
			}
		}
	}
}

nodeStyle Property (2) {
	appearanceProvider ("info.scce.rig.appearance.PropertyAppearanceProvider")
	rectangle {
		appearance hidden
		size (200, 20)
		
		text propertyName {
			appearance body
			position (LEFT 24, MIDDLE)
			value "%1$12s:"
		}
		
		text propertyValue {
			appearance body
			position (RIGHT -4, MIDDLE)
			value "%2$24s"
		}
		
		anchor ellipse socket {
			appearance body
			position (LEFT 4, MIDDLE)
			size(fix 16, fix 16)
		}
		
		rectangle {
			appearance hidden
			position (RIGHT -4, MIDDLE)
			size(fix 16, fix 16)
			image padlock {
				size(fix 16, fix 16)
				path ("assets/icons/lock-16.png")
			}
		}
	}
}

nodeStyle Parameter (1) {
	rectangle {
		appearance hidden
		size (200, 20)
		
		text {
			appearance body
			position (LEFT 4, MIDDLE)
			value "%1$s"
		}
		
		anchor ellipse {
			appearance primary
			position (RIGHT -4, MIDDLE)
			size(fix 16, fix 16)
		}
	}
}

edgeStyle Next {
	appearance line_solid
	
	decorator {
		location (1.0)
		ARROW
		appearance line_solid 
	}
}

edgeStyle Assignment {
	appearance line_dashed
	
	decorator {
		location (1.0)
		ARROW
		appearance line_dashed
	}
}

