appearance default {
	lineWidth 3
	background (229,229,229)
	foreground (255,0,183)
}

appearance clickArea {
	transparency 0.7
	background (255,0,183)
	lineWidth 0
}

appearance textArea {
	transparency 0.5
	background (255,255,255)
	lineWidth 0
}

nodeStyle screen {
	appearanceProvider ("info.scce.cinco.product.webstory.appearance.ScreenAppearanceProvider")
	rectangle {
		appearance default
		size(360,270)
		image "bgimg" {
			position ( CENTER, MIDDLE )
			size (360,270)
			path ("image/default-background.png")
		}
	}
}

nodeStyle startMarker {
	polygon {
		appearance {
			background (133,212,100)
			lineWidth 2
			foreground (90,140,68)
		}
		points [ (0,0) (30,15) (0,30)]
	}
}


nodeStyle ellipseClickArea {
	ellipse {
		appearance clickArea
		size(20,60)
	}
}

nodeStyle rectangleClickArea {
	rectangle {
		appearance clickArea
		size(20,20)
	}
}

nodeStyle textArea(1) {
	rectangle {
		appearance textArea
		size(20,20)
		text {
			 position ( LEFT, TOP )
			 value "%s"
		}	

	}
}

nodeStyle variable(1) {
	ellipse { 
		appearance {
			background (168,215,255)
			foreground (28,98,166)
			lineWidth 2
		}
		size (30,30)

		text {
			 position ( CENTER, MIDDLE)
			 value "%s"
		}	
	}
}

nodeStyle condition {
	polygon {
		appearance {
			lineWidth 2
			background (255,229,0)
			foreground (188,169,0)
		}
		points [ (40,0) (80,20) (40,40) (0,20)]
	}	
}

nodeStyle modifyVariable {
	appearanceProvider ("info.scce.cinco.product.webstory.appearance.ModifyNodeAppearanceProvider")
	roundedRectangle {
		appearance {
			lineWidth 2
			background (142,142,142)
			foreground (72,72,72)
		}
		size (60,30)
		corner (10,10)
		ellipse LED_green {
			position ( CENTER -10, MIDDLE )
			size (16,16)
		}
		ellipse LED_red {
			position ( CENTER 10, MIDDLE )
			size (16,16)
		}
	}
}

edgeStyle controlFlow {	
	appearance extends default {
		foreground (255,0,183)
	}
	decorator {
		location (1.0) // at the end of the edge
		ARROW
		appearance extends default {
			foreground (255,0,183)
		}
	}
}

edgeStyle falseFlow {	
	appearance extends default {
		foreground (255,0,183)
		lineStyle DOT
	}
	decorator {
		location (1.0) // at the end of the edge
		ARROW
		appearance extends default {
			foreground (255,0,183)
		}
	}
}

edgeStyle dataFlow {
	appearance {
		foreground (171,171,171)
		lineWidth 2
	}
	decorator {
		location (1.0) // at the end of the edge
		ARROW
		appearance {
			foreground (171,171,171)
			lineWidth 2
		}
	}
}
