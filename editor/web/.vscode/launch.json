{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Browser Backend",
      "program": "${workspaceRoot}/browser-app/src-gen/backend/main.js",
      "args": [
        "--loglevel=debug",
        "--port=3000",
        "--no-cluster",
        "--app-project-path=${workspaceRoot}/browser-app",
        "--plugins=local-dir:${workspaceRoot}/browser-app/plugins"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/node_modules/@theia/*/lib/**/*.js",
        "${workspaceRoot}/browser-app/lib/**/*.js",
        "${workspaceRoot}/browser-app/src-gen/backend/*.js",
        "${workspaceRoot}/cinco-language-server-extension/lib/**/*.js",
        "${workspaceRoot}/cinco-authenticator/lib/**/*.js"
      ],
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "preLaunchTask": "checkNode"
    },
    {
      "name": "Launch Browser Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}/browser-app"
    }
  ]
}