{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "checkNode",
      "type": "shell",
      "command": "node --version",
      "problemMatcher": []
    },
    {
      "label": "CINCO-Cloud: Build all packages",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "yarn",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "CINCO-Cloud: Watch all packages",
      "type": "shell",
      "group": "build",
      "command": "yarn watch",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "CINCO-Cloud: Start Browser Backend",
      "type": "shell",
      "command": "cd browser-app && yarn start",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "CINCO-Cloud: Start Browser Backend (expecting server products to run)",
      "type": "shell",
      "command": "cd browser-app && yarn debug",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "CINCO-Cloud: Open in Browser",
      "type": "shell",
      "group": "test",
      "command": "google-chrome 127.0.0.1:3000",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "freePort3000",
      "type": "shell",
      "group": "none",
      "command": "test -x ./.vscode/freeport.sh && ./.vscode/freeport.sh 3000",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "freePort3003",
      "type": "shell",
      "group": "none",
      "command": "test -x ./.vscode/freeport.sh && ./.vscode/freeport.sh 3003",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "freePort5007",
      "type": "shell",
      "group": "none",
      "command": "test -x ./.vscode/freeport.sh && ./.vscode/freeport.sh 5007",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "freePort3003 && freePort5007",
      "type": "shell",
      "group": "none",
      "dependsOn": [
        "freePort3003",
        "freePort5007"
      ],
      "command": "",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "freePort3000 && freePort3003 && freePort5007",
      "type": "shell",
      "group": "none",
      "dependsOn": [
        "freePort3000",
        "freePort3003",
        "freePort5007"
      ],
      "command": "",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}