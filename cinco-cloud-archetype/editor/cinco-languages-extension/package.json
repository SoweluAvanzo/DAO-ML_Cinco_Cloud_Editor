{
    "name": "cinco-languages-extension",
    "displayName": "cinco-languages-extension",
    "description": "Language support for Cinco's MGL and MSL",
    "version": "1.0.0",
    "author": "ls5",
    "license": "EPL-2.0",
    "publisher": "ls5",
    "repository": "https://gitlab.com/scce/cinco-cloud",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "mgl",
                "aliases": [
                    "MGL",
                    "mgl"
                ],
                "extensions": [
                    ".mgl"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "msl",
                "aliases": [
                    "MSL",
                    "msl"
                ],
                "extensions": [
                    ".style"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mgl",
                "scopeName": "source.mgl",
                "path": "./syntaxes/mgl.tmLanguage.json"
            },
            {
                "language": "msl",
                "scopeName": "source.msl",
                "path": "./syntaxes/msl.tmLanguage.json"
            }
        ],
        "keybindings":[
            {
                "command": "cincoCloud.generateCincoProduct",
                "key": "alt+g"
            },
            {
                "command": "cincoCloud.uploadCincoProduct",
                "key": "alt+Shift+g"
            }
        ],
        "commands": [
            {
                "command": "cincoCloud.generateCincoProduct",
                "title": "Generate Meta-Specification",
                "category": "Cinco Cloud",
                "icon": {
                    "light": "./resources/generate_light.svg",
                    "dark": "./resources/generate_dark.svg"
                }
            },
            {
                "command": "cincoCloud.uploadCincoProduct",
                "title": "Upload Meta-Specification",
                "icon": {
                    "light": "./resources/upload_light.svg",
                    "dark": "./resources/upload_dark.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == mgl",
                    "command": "cincoCloud.generateCincoProduct",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == mgl",
                    "command": "cincoCloud.uploadCincoProduct",
                    "group": "navigation"
                }
            ]
        }

    },
    "activationEvents": [
        "onLanguage:mgl",
        "onLanguage:msl"
    ],
    "bin": {
        "mgl-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "private": true,
    "scripts": {
        "build": "yarn run grpc:generate && yarn run copyGrammar && yarn run compile && yarn run bundle && yarn run vsce",
        "copyGrammar": "cp -r ../cinco-languages/syntaxes/* ./syntaxes",
        "compile": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "bundle": "webpack",
        "vsce": "vsce package",
        "grpc:generate": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./generated --grpc_out=grpc_js:./generated --ts_out=grpc_js:./generated -I ./ cinco-cloud.proto"
    },
    "dependencies": {
        "@cinco-glsp/cinco-languages": "1.0.0",
        "@grpc/grpc-js": "^1.9.2",
        "@grpc/proto-loader": "^0.7.9",
        "adm-zip": "^0.5.10",
        "original-fs": "1.2.0",
        "chevrotain": "~10.4.2",
        "commander": "~10.0.0",
        "grpc-web": "^1.4.2",
        "langium": "1.3.1",
        "minio": "^7.1.3",
        "vscode-languageclient": "~8.0.2",
        "vscode-languageserver": "~8.0.2",
        "vscode-uri": "~3.0.7"
    },
    "devDependencies": {
      "@types/adm-zip": "^0.5.0",
      "@types/node": "~16.18.11",
      "@types/vscode": "~1.67.0",
      "@typescript-eslint/eslint-plugin": "~5.51.0",
      "@typescript-eslint/parser": "~5.51.0",
      "@vscode/vsce": "^2.19.0",
      "eslint": "~8.47.0",
      "grpc-tools": "^1.12.4",
      "grpc_tools_node_protoc_ts": "^5.3.3",
      "langium-cli": "~2.1.0",
      "source-map-loader": "^4.0.1",
      "ts-loader": "^9.4.3",
      "typescript": "~4.9.5",
      "webpack": "^5.86.0",
      "webpack-cli": "^5.1.4"
    }
}
