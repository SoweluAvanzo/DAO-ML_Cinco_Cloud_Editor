{
  "name": "mgl",
  "scopeName": "source.mgl",
  "fileTypes": [
    ".mgl"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.mgl",
      "match": "\\b(Container|Date|Edge|GraphModel|ModelElement|ModelElementContainer|Node|abstract|as|attr|boolean|containableElements|container|diagramExtension|edge|enum|extends|external|final|graphModel|iconPath|id|import|incomingEdges|node|number|outgoingEdges|override|prime|primeattr|primeparam|stealth|string|style|stylePath|this|type|unique)\\b"
    },
    {
      "name": "string.quoted.double.mgl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.mgl",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.mgl",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.mgl"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.mgl"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.mgl"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.mgl"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.mgl",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
