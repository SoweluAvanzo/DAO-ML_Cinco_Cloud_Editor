stylePath "pizza.msl"

graphModel Pizzeria {
    diagramExtension "pizza"
    
    containableElements(Pizza)
}

container Pizza {     
    style pizza 

    containableElements(TomatoSauce)
}	

container TomatoSauce {    
    style tomatoSauce 
    containableElements(Mozarella, Salami, Corn)
}	 

node Mozarella {
    style cheese 
}

node Salami {
    style salami 
}
 
/**
 * When the oven is too hot, corn pops up
 */
node Corn {
    style popcorn 
}


