nodeStyle variable(1) {
	ellipse { 
		appearance {
			background (168,215,255)
			foreground (28,98,166)
			lineWidth 2
		}
		size (30,30)

		text {
            appearance blackText
			position ( CENTER, MIDDLE)
			value "%s" 
		}	
	}
}

nodeStyle condition {
	polygon {
		appearance {
			background (255,229,0)
			foreground (188,169,0)
			lineWidth 2
		}
		points [ (-40,0) (0,40) (40,0) (0, -40)]
        size (60,60)
	}	
}

nodeStyle modifyVariable(1) {
	roundedRectangle {
		appearance {
			background (142,142,142)
			foreground (72,72,72)
			lineWidth 2
		}
		size (60,30)
		corner (10,10)
		text {
            appearance blackText
			position ( CENTER, MIDDLE)
			value "%s" 
		}	
	}
}

edgeStyle controlFlow {	
	appearance extends default {
		foreground (255,0,183)
	}
	decorator {
		location (1.0) // at the end of the edge
		ARROW
		appearance extends default {
			foreground (255,0,183)
		}
	}
}

edgeStyle fFlow {	
	appearance extends default {
		foreground (255,0,183)
		lineStyle DOT
	}
	decorator {
		location (1.0) // at the end of the edge
		ARROW
		appearance extends default {
			foreground (255,0,183)
		}
	}
}

edgeStyle dataFlow {
	appearance {
		foreground (171,171,171)
		lineWidth 2
	}
	decorator {
		location (1.0) // at the end of the edge
		ARROW
		appearance {
			foreground (171,171,171)
			lineWidth 2
		}
	}
}
