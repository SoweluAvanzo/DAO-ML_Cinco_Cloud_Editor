{
	"name": "cinco-project-initializer",
	"displayName": "Cinco Project Initializer",
	"description": "This extension registers commands to create a predefined example project into the workspace.",
	"author": "ls5",
	"license": "EPL-2.0",
	"version": "0.0.1",
	"publisher": "ls5",
	"repository": "https://gitlab.com/scce/cinco-cloud",
	"categories": [
		"Other"
	],
	"keywords": [
		"Cinco",
		"MGL",
		"CPD",
		"Style"
	],
	"engines": {
		"vscode": "^1.54.0"
	},
	"activationEvents": [
		"*",
		"onCommand:info.scce.cinco-cloud.initialize-project"
	],
	"main": "./out/extension/bundle",
	"contributes": {
		"commands": [
			{
				"command": "info.scce.cinco-cloud.initialize-project",
				"title": "Create Example",
				"category": "Cinco Cloud"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"postinstall": "npm run compile && vsce package",
        "build": "tsc --build",
        "bundle-extension": "esbuild out/extension/main.js --bundle --platform=node --external:vscode --format=cjs --outfile=out/extension/bundle.js",
        "bundle-webview": "esbuild out/webview/main.js --bundle --outfile=out/webview/bundle.js",
		"compile": "npm run build && npm run bundle-extension && npm run bundle-webview"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.13",
		"@types/mocha": "^8.0.3",
		"@types/node": "14.14.16",
		"@types/vscode": "1.49.0",
		"@typescript-eslint/parser": "^2.3.0",
		"esbuild": "^0.14.29",
		"eslint": "^6.4.0",
		"mocha": "^8.1.1",
		"typescript": "^5.1.6",
		"vsce": "1.85.1"
	},
	"dependencies": {
		"fs-extra": "^10.0.1"
	},
	"config": {
		"unsafe-perm": true
	}
}
