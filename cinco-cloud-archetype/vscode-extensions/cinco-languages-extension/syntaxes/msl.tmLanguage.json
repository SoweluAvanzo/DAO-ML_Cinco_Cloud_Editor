{
  "name": "msl",
  "scopeName": "source.msl",
  "fileTypes": [
    ".style"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.msl",
      "match": "\\b(ARROW|BOLD|BOTTOM|CENTER|CIRCLE|DASH|DASHDOT|DASHDOTDOT|DIAMOND|DOT|ITALIC|LEFT|MIDDLE|RIGHT|SOLID|TOP|TRIANGLE|anchor|appearance|appearanceProvider|background|corner|decorator|edgeStyle|ellipse|extends|false|filled|fix|fixed|font|foreground|freeform|image|imagePath|lineStyle|lineWidth|location|movable|multiText|nodeStyle|path|points|polygon|polyline|position|rectangle|roundedRectangle|size|text|transparency|true|type|value)\\b"
    },
    {
      "name": "string.quoted.double.msl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.msl",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.msl",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.msl"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.msl"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.msl"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.msl"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.msl",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
