{
  "name": "cpd",
  "scopeName": "source.cpd",
  "fileTypes": [
    ".cpd"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.cpd",
      "match": "\\b(about|cincoProduct|defaultPerspective|extensionClasses|features|forceGenerate|genModel|genModels|generateNOT|id|imagePath|linuxIcon|macOSIcon|mgl|path|platform:/plugin|platform:/resource|plugins|progressBar|progressMessage|project|splashScreen|text|textColor|version|windowsIcon|withEditCode|withEditorCode|withTestCode|xtextLanguage|xtextLanguages)\\b"
    },
    {
      "name": "string.quoted.double.cpd",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.cpd",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.cpd",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.cpd"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.cpd"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.cpd"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.cpd"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.cpd",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
