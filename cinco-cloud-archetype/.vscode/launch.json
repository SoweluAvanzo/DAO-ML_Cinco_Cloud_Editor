{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.1.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Cinco Theia Backend (Embedded GLSP Server)",
      "envFile": "${workspaceRoot}/.env",
      "runtimeExecutable": "yarn",
      "args": [
        "start",
        "--port=3000",
        "--no-cluster",
        "--CINCO_GLSP=5007",
        "--app-project-path=${workspaceRoot}/editor/browser-app",
        "--root-dir=${workspaceRoot}/editor/glsp-client/workspace"
      ],
      "cwd": "${workspaceFolder}/editor/browser-app",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/editor/node_modules/@theia/*/lib/**/*.js",
        "${workspaceRoot}/editor/node_modules/@eclipse-glsp/*/lib/**/*.js",
        "${workspaceRoot}/editor/browser-app/lib/**/*.js",
        "${workspaceRoot}/editor/browser-app/src-gen/backend/*.js",
        "${workspaceRoot}/editor/glsp-client/cinco-theia/lib/**/*.js",
        "${workspaceRoot}/editor/glsp-client/cinco-glsp-client/lib/**/*.js",
        "${workspaceRoot}/editor/browser-app/src-gen/**/*.js",
        "${workspaceRoot}/editor/node_modules/**/*.js",
        "${workspaceRoot}/editor/glsp-client/node_modules/**/*.js",
        "${workspaceRoot}/editor/glsp-client/cinco-glsp-client/node_modules/**/*.js"
      ],
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Cinco Theia Backend (External GLSP Server)",
      "envFile": "${workspaceRoot}/.env",
      "runtimeExecutable": "yarn",
      "args": [
        "start:external",
        "--port=3000",
        "--no-cluster",
        "--CINCO_GLSP=5007",
        "--app-project-path=${workspaceRoot}/editor/browser-app",
        "--root-dir=${workspaceRoot}/editor/glsp-client/workspace"
      ],
      "cwd": "${workspaceFolder}/editor/browser-app",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/editor/node_modules/@theia/*/lib/**/*.js",
        "${workspaceRoot}/editor/node_modules/@eclipse-glsp/*/lib/**/*.js",
        "${workspaceRoot}/editor/browser-app/lib/**/*.js",
        "${workspaceRoot}/editor/browser-app/src-gen/backend/*.js",
        "${workspaceRoot}/editor/glsp-client/cinco-theia/lib/**/*.js",
        "${workspaceRoot}/editor/glsp-client/cinco-glsp-client/lib/**/*.js",
        "${workspaceRoot}/editor/browser-app/src-gen/**/*.js",
        "${workspaceRoot}/editor/node_modules/**/*.js",
        "${workspaceRoot}/editor/glsp-client/node_modules/**/*.js",
        "${workspaceRoot}/editor/glsp-client/cinco-glsp-client/node_modules/**/*.js"
      ],
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    },
    {
      "name": "Launch Theia Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/#${workspaceRoot}/workspace",
      "sourceMaps": true,
      "cleanUp": "wholeBrowser",
      "webRoot": "${workspaceRoot}/browser-app"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Cinco GLSP Server",
      "program": "${workspaceFolder}/editor/cinco-glsp-server/lib/src/index.js",
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/editor/cinco-glsp-server/node_modules/@eclipse-glsp/**/*.js",
        "${workspaceFolder}/editor/cinco-glsp-server/lib/**/*.js"
      ],
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    }
  ],
}